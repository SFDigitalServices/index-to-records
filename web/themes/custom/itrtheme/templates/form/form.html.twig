{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}

{% if content_type == 'record' %}
  <div id="overlay"></div>
  <div id="record-template-browser">
    <h4>Select a template to use for this record<a href="#" id="close" class="link">close</a></h4>
    <div id="record-template-browser-content"></div>
  </div>
{% endif %}

{%
  set classes = [
    'views_form_schedules' in element['#form_id'] == 1 ? 'itrtheme-schedules-view-form'
  ]
%}

<form{{ attributes.addClass(classes) }}>
  {{ children }}
</form>
